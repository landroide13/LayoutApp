<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="actLog.MainPage">

    <StackLayout BackgroundColor="#808080" Padding="10, 50">

        <StackLayout Orientation="Horizontal" Margin="30">
            <Label Text="First Name" FontSize="Default" TextColor="White"/>
            <Entry Placeholder="First Name" />
        </StackLayout>

        <StackLayout Orientation="Horizontal" Margin="30">    
            <Label Text="Last Name" FontSize="Default" TextColor="White" />
            <Entry Placeholder="Last Name" />
        </StackLayout>

        <StackLayout Orientation="Vertical" Margin="10">
            <Button x:Name="btn_submit"  Text="Submit" TextTransform="Uppercase" BackgroundColor="#2196F3" TextColor="White" Margin="20"/>
            <Button x:Name="btn_register" Text="Register" TextTransform="Uppercase" BackgroundColor="#2196F3" TextColor="White" Margin="20"/>
        </StackLayout>

    </StackLayout>

</ContentPage>
